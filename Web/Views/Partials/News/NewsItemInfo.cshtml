@model NewsItem
@{
    var showTime = Convert.ToBoolean(ViewData["showTime"]);
    var publishDate = Model.PublishDate == default(DateTime) ? Model.CreateDate : Model.PublishDate;
    var date = publishDate.ToString("dd-MM-yyyy");
    var time = publishDate.ToString("HH:mm");
    var location = Model.Place;
    var disqusUrl = Model.Url + "#disqus_thread";
    var rotateStyle = Utils.GetRandomRotateStyle(-1, 1);
}
<ul class="news-item-info" style="@rotateStyle">
    <li>
        <span class="calendar-icon"></span>
        <span>@date</span>
    </li>
    @if (showTime)
    {
        <li>
            <span class="time-icon"></span>
            <span>@time</span>
        </li>
    }
    @if (!string.IsNullOrEmpty(location))
    {
        <li>
            <span class="location-icon"></span>
            <span>@location</span>
        </li>
    }
    <li>
        <span class="comments-icon"></span>
        <span>
            <a href="@disqusUrl" data-disqus-identifier="@Model.Id"></a>
        </span>
    </li>
    @*<li>
            <span class="time-icon"></span>
            <a href="#">Поділитись</a>
        </li>*@
</ul>
